---
import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),

  content = await Astro.slots.render('content'),

  id,
} = Astro.props;
---

<section class="relative md:-mt-[76px]" {...id ? { id } : {}}>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 mt-[76px]">
    <div class="pt-12">
      <div class="text-center max-w-5xl mx-auto">
        {title && <h1 class="text-4xl md:text-5xl font-bold mb-4 font-heading dark:text-gray-200" set:html={title} />}
        <div class="max-w-screen-xl mx-auto">
          {subtitle && <p class="text-lg mb-6 dark:text-slate-300" set:html={subtitle} />}
        </div>
        {content && <Fragment set:html={content} />}
      </div>
    </div>
  </div>
</section>
