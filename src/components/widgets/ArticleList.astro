---
import { twMerge } from 'tailwind-merge';

import JournalCitation from './JournalCitation.astro';
import type { CollectionEntry } from 'astro:content';
interface Props {
  articles: Array<CollectionEntry<'articles'>>;
}
const { articles } = Astro.props;
---

<div class="py-2">
  <h3 class={twMerge('text-xl font-bold', 'text-lg font-medium leading-6 dark:text-white pb-2')}>Journal articles</h3>
  <ul class="list-none p-0 m-0">
    {
      articles.map((article) => (
        <li>
          <div class="py-1">
            <div class="prose prose-default prose-sm max-w-none">
              <JournalCitation article={article} />
            </div>
            <div class="flex flex-row gap-x-4 py-1">
              <span class="__dimensions_badge_embed__"  data-style="large_rectangle" data-doi={article.data.doi}></span>
              <span class='altmetric-embed' data-badge-type="1" data-badge-popover="right" data-doi={article.data.doi}></span>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</div>

<script type='text/javascript' src='https://d1bxh8uas1mnw7.cloudfront.net/assets/embed.js'></script>
<script async src="https://badge.dimensions.ai/badge.js" charset="utf-8"></script>
